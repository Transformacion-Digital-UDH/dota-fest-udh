---
const { label, idbtn } = Astro.props;
---

<button id={idbtn} class="dota-button-primary w-full tracking-widest" {...Astro.props}>
  {label}
</button>

<style>
  .dota-button-primary {
    background: linear-gradient(to bottom, #37683f, #499420);
    border: 1px solid #649b3b;
    color: white;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 12px 24px;
    cursor: pointer;
    transition:
      filter 0.1s linear,
      border 0.1s linear;
    text-shadow: 0px 0px 6px rgba(0, 0, 0, 1);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
  }

  .dota-button-primary:hover {
    filter: brightness(1.2);
  }

  .dota-button-primary:active {
    filter: brightness(1.4);
    border-color: #2f5e15;
    transform: translateY(1px);
  }
</style>
