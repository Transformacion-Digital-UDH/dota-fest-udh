---
const { label, idbtn } = Astro.props;
---

<button id={idbtn} class="dota-button-danger"> {label} </button>

<style>
  .dota-button-danger {
    background: linear-gradient(to bottom, #6b211c, #8e2b19);
    border: 1px solid #bc4539;
    color: white;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 12px 24px;
    cursor: pointer;
    transition:
      filter 0.1s linear,
      border 0.1s linear;
    text-shadow: 0px 0px 6px rgba(0, 0, 0, 1);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
  }

  .dota-button-danger:hover {
    filter: brightness(1.2);
  }

  .dota-button-danger:active {
    filter: brightness(1.4);
    border-color: #501f18;
    transform: translateY(1px);
  }
</style>
