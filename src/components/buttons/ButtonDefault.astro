---
const { label, idbtn } = Astro.props;
---

<button id={idbtn} class="dota-button-default"> {label} </button>

<style>
  .dota-button-default {
    background: linear-gradient(to bottom, #4c4c4c, #2f2f2f);
    border: 1px solid #666666;
    color: #cccccc;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    padding: 12px 24px;
    cursor: pointer;
    transition:
      filter 0.1s linear,
      border 0.1s linear,
      color 0.1s linear;
    text-shadow: 0px 0px 6px rgba(0, 0, 0, 1);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
  }

  .dota-button-default:hover {
    filter: brightness(1.2);
    color: white;
  }

  .dota-button-default:active {
    filter: brightness(1.4);
    border-color: #444444;
    transform: translateY(1px);
  }
</style>
