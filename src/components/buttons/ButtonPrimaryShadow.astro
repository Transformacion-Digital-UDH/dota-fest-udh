---
const { label } = Astro.props;
---

<a href="/registro" class="dota-find-match"> {label} </a>

<style>
  .dota-find-match {
    position: relative;
    background: linear-gradient(to bottom, #3d7c3c, #2d5c2a);
    border: 2px solid #4caf50;
    color: white;
    font-family: "Aminute", Tahoma, Geneva, Verdana, sans-serif;
    font-size: 22px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    padding: 15px 100px;
    cursor: pointer;
    text-shadow:
      0 1px 2px rgba(0, 0, 0, 0.8),
      0 0 8px #a4ffb1;
    box-shadow:
      0 0 30px 10px rgba(102, 255, 153, 0.5),
      /* exterior glow */ inset 0 0 20px rgba(0, 0, 0, 0.7); /* inner shadow */
    background-image: url("/textures/dota_pattern.png"); /* usa tu textura */
    background-size: cover;
    background-blend-mode: overlay;
    border-radius: 5px;
    transition: all 0.2s ease-in-out;
  }
  .dota-find-match:hover {
    filter: brightness(1.1);
    box-shadow:
      0 -10px 50px 25px rgba(102, 255, 153, 0.7),
      inset 0 0 10px rgba(0, 0, 0, 0.7);
  }
</style>
